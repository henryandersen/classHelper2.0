<!doctype html>
<html>
<head>
    <title>Class helper</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Teacher Profile</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <p><span class="fa fa-user"></span>
                  <strong>Logged in as</strong>: <%= user.local.email %></p>

            </div>
        </div>

    </div>

</div>

<ul class="needs">
    <table class = "table table-striped">
      <caption>List of Requests</caption>
      <tr>
        <th>Need</th>
        <th>Comment</th>
        <th>Urgency</th>
        <th>Student</th>

      </tr>
  <% for(var i=0; i<needs.length; i++) {%>
  <tr>
    <td><%= needs[i].need%></td>
    <td><%= needs[i].comments%></td>
    <td><%= needs[i].urgency %></td>
    <td><%= needs[i].email%></td>
    <td>
        <form method="post" action ="/delete">
        <input type= "hidden" name="buttonId" value= "<%=needs[i]._id%>">
        <button type= "submit" class="btn btn-danger" value ="finished">Resolve</button>
        </form>
    </td>
  </tr>
  <% }%>
</ul>

</body>
</html>
